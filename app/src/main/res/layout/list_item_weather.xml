<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/weather_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:text="Friday, 12 Feb" />

    <TextView
        android:id="@+id/weather_list_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weather_list_date"
        tools:text="clear sky night" />

    <TextView
        android:id="@+id/weather_list_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/weather_list_icon"
        android:padding="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:text="7'C" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/weather_list_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        app:srcCompat="@drawable/ic_moon" />


</RelativeLayout>